 * Example:
 *
   {% include '@bi-bcl/button/button-demo.html.twig' %}
 */
#}
{% apply spaceless %}

  <h4>{{ 'Button base'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Button'|trans,
      utility_classes: ['mr-3']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Link'|trans,
      tag: 'a',
      url: '#',
      utility_classes: ['mr-3']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Input'|trans,
      tag: 'input',
      utility_classes: ['mr-3']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Submit'|trans,
      tag: 'input',
      type: 'submit',
      utility_classes: ['mr-3']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Reset'|trans,
      tag: 'input',
      type: 'reset',
      utility_classes: ['mr-3']
    } %}
  </div>

  <h4>{{ 'Button variants'|trans }}</h4>
  {% set colors = [
    "primary", "secondary", "success", "danger", "warning", "white", "dark", "light", "black"
  ] %}
  <div class="border shadow mb-5 p-4">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        utility_classes: ['mr-3']
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button outline variants'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        outline: true,
        utility_classes: [
          'mr-3',
          color == 'white' or color == 'light' ? 'text-secondary'
        ]
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button disabled'|trans }}</h4>
  {% set colors = [
    "primary", "secondary", "success", "danger", "warning", "white", "dark", "light", "black"
  ] %}
  <div class="border shadow mb-5 p-4">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        disabled: true,
        utility_classes: [
          'mr-3',
          color == 'primary' ? 'text-dark'
        ]
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button outline disabled'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        outline: true,
        disabled: true,
        utility_classes: [
          'mr-3',
          color == 'white' or color == 'light' ? 'text-secondary'
        ]
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        utility_classes: ['mr-3']
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button outline with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        outline: true,
        utility_classes: [
          'mr-3',
          color == 'dark' or color == 'black' ? 'text-white'
        ]
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button disabled with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        disabled: true,
        utility_classes: ['mr-3']
      } %}
      &nbsp;
    {% endfor %}
  </div>

  <h4>{{ 'Button outline disabled with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for color in colors %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: color,
        variant: color,
        disabled: true,
        outline: true,
        utility_classes: [
          'mr-3',
          color == 'dark' or color == 'black' ? 'text-white'
        ]
      } %}
      &nbsp;
    {% endfor %}
  </div>

{% endapply %}
