{#
/**
 * @file
 * Button demo.
 *
 * Example:
 *
   {% include '@bi-bcl/button/button-demo.html.twig' %}
 */
#}
{% apply spaceless %}

  <h4>{{ 'Button base'|trans }}</h4>
  <div class="border shadow mb-5">
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Button'|trans,
      button_classes: ['m-1']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Link'|trans,
      tag: 'a',
      url: '#',
      button_classes: ['m-1']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Input'|trans,
      tag: 'input',
      button_classes: ['m-1']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Submit'|trans,
      tag: 'input',
      type: 'submit',
      button_classes: ['m-1']
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Reset'|trans,
      tag: 'input',
      type: 'reset',
      button_classes: ['m-1']
    } %}
  </div>

  <h4>{{ 'Button variants'|trans }}</h4>
  {% set variants = [
    "primary", "secondary", "info", "success", "danger", "warning", "white", "dark", "light", "black", "link"
  ] %}
  <div class="border shadow mb-5 p-4">
    {% for variant in variants %}
      {% set attributes = create_attribute() %}
      {% set attributes = attributes.setAttribute('data-attribute', 'value') %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        button_classes: ['m-1'],
        btn_attributes: attributes
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button outline variants'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        outline: true,
        button_classes: [
          'm-1',
          variant == 'white' or variant == 'light' ? 'text-secondary'
        ]
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button disabled'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        disabled: true,
        button_classes: [
          'm-1',
          variant == 'primary' ? 'text-dark'
        ]
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button outline disabled'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        outline: true,
        disabled: true,
        button_classes: [
          'm-1',
          variant == 'white' or variant == 'light' ? 'text-secondary'
        ]
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        button_classes: ['m-1']
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button outline with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        outline: true,
        button_classes: [
          'm-1',
          variant == 'dark' or variant == 'black' or variant == 'link' ? 'text-white'
        ]
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button disabled with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        disabled: true,
        button_classes: ['m-1']
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button outline disabled with dark background '|trans }}</h4>
  <div class="border shadow mb-5 p-4 bg-dark">
    {% for variant in variants %}
      {% include '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        disabled: true,
        outline: true,
        button_classes: [
          'm-1',
          variant == 'dark' or variant == 'black' or variant == 'link' ? 'text-white'
        ]
      } %}
    {% endfor %}
  </div>

  <h4>{{ 'Button with icon'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for variant in variants %}
      {% embed '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        button_classes: ['m-1', 'btn-icon'],
      } %}
        {% block after %}
          {% include '@bi-bcl/icon/icon.html.twig' with {
            name: 'it-star-full',
            size: 'sm',
            color: variant == 'light' or variant == 'white' ? 'primary' : 'white',
            icon_classes: ['ms-1'],
          } %}
        {% endblock %}
      {% endembed %}
    {% endfor %}
  </div>

  <h4>{{ 'Button with rounded icon'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for variant in variants %}
      {% embed '@bi-bcl/button/button.html.twig' with {
        label: variant,
        variant: variant,
        button_classes: ['m-1', 'btn-icon'],
      } %}
        {% block before %}
          <span class="rounded-icon">
            {% include '@bi-bcl/icon/icon.html.twig' with {
              name: 'it-user',
              size: 'sm',
              color: variant == 'light' or variant == 'white' ? 'primary' : variant,
              icon_classes: ['mr-1'],
            } %}
          </span>&nbsp;
        {% endblock %}
      {% endembed %}
    {% endfor %}
  </div>

  <h4>{{ 'Button various size'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Primary Large'|trans,
      variant: 'primary',
      size: 'lg',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Secondary Large'|trans,
      variant: 'secondary',
      size: 'lg',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Primary Small'|trans,
      variant: 'primary',
      size: 'sm',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Secondary Small'|trans,
      variant: 'secondary',
      size: 'sm',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Primary mini'|trans,
      variant: 'primary',
      size: 'xs',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Secondary mini'|trans,
      variant: 'secondary',
      size: 'xs',
      button_classes: ['m-1'],
    } %}
  </div>

  <h4>{{ 'Button full width'|trans }}</h4>
  <div class="border shadow mb-5 p-4 d-grid gap-2">
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Primary Large'|trans,
      variant: 'primary',
      size: 'lg',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Secondary Large'|trans,
      variant: 'secondary',
      size: 'lg',
      button_classes: ['m-1'],
    } %}
  </div>

  <h4>{{ 'Button full width responsive md'|trans }}</h4>
  <div class="border shadow mb-5 p-4 d-grid gap-2 d-md-block">
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Primary Large'|trans,
      variant: 'primary',
      size: 'lg',
      button_classes: ['m-1'],
    } %}
    {% include '@bi-bcl/button/button.html.twig' with {
      label: 'Secondary Large'|trans,
      variant: 'secondary',
      size: 'lg',
      button_classes: ['m-1'],
    } %}
  </div>

{% endapply %}
