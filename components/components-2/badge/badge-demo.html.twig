{#
/**
 * @file
 * Badge demo.
 *
 * Example:
 *
   {% include '@bi-bcl/badge/badge-demo.html.twig' %}
 */
#}

{% apply spaceless %}

  <h4>{{ 'Badge with title'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% for i in 1..6 %}
      <h{{ i }}>Example title
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: 'New'|trans,
          background: 'secondary',
        } %}
      </h{{ i }}>
    {% endfor %}
  </div>

  <h4>{{ 'Badge with button'|trans }}</h4>
  <div class="border shadow mb-5 p-4">
    {% embed '@bi-bcl/button/button.html.twig' with {
      label: 'Notification'|trans,
      variant: 'primary',
      utility_classes: ['m-2'],
    } %}
      {% block after %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: '4',
          text_color: 'secondary',
          assistive_text: 'Unread Messages'|trans,
          utility_classes: ['neutral-2-bg']
        } %}
      {% endblock %}
    {% endembed %}

    {% embed '@bi-bcl/button/button.html.twig' with {
      label: 'Inbox'|trans,
      variant: 'primary',
      utility_classes: ['m-3', 'position-relative'],
    } %}
      {% block after %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: '99+',
          background: 'danger',
          assistive_text: 'Unread Messages'|trans,
          rounded_pill: true,
          utility_classes: ['position-absolute', 'top-0', 'start-100', 'translate-middle']
        } %}
      {% endblock %}
    {% endembed %}

    {% embed '@bi-bcl/button/button.html.twig' with {
      label: 'Profile'|trans,
      variant: 'primary',
      utility_classes: ['m-3', 'position-relative'],
    } %}
      {% block after %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: null,
          background: 'danger',
          assistive_text: 'New alerts'|trans,
          rounded_pill: true,
          utility_classes: ['position-absolute', 'top-0', 'start-100', 'translate-middle', 'p-2', 'border', 'border-light', 'rounded-circle']
        } %}
      {% endblock %}
    {% endembed %}
  </div>

  <h4>{{ 'Badge contestual variants'|trans }}</h4>
  {% set colors = [
    "primary", "secondary", "success", "danger", "warning", "white", "dark", "light", "black"
  ] %}
  <div class="border shadow mb-5 p-4">
    <p>
      {% for color in colors %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: color,
          background: color,
          assistive_text: 'Variants'|trans
        } %}
        &nbsp;
      {% endfor %}
    </p>
    <p>
      {% for color in colors %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: color,
          background: color,
          outline: true,
          assistive_text: 'Variants'|trans
        } %}
        &nbsp;
      {% endfor %}
    </p>
    <p>
      {% for color in colors %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: color,
          background: color,
          rounded_pill: true,
          assistive_text: 'Variants'|trans
        } %}
        &nbsp;
      {% endfor %}
    </p>
    <p>
      {% for color in colors %}
        {% include '@bi-bcl/badge/badge.html.twig' with {
          label: color,
          background: color,
          rounded_pill: true,
          outline: true,
          assistive_text: 'Variants'|trans
        } %}
        &nbsp;
      {% endfor %}
    </p>
  </div>
{% endapply %}
