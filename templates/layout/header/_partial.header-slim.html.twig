<div class="it-header-slim-wrapper{{ slim_header_light ? ' theme-light' }}">
  <div class="{{ slim_header_container_type }}">
    <div class="row">
      <div class="col-12">
        <div class="it-header-slim-wrapper-content">
          {% if page.header_slim_menu %}
            <a class="d-none d-lg-block navbar-brand" href="{{ government_entity_url }}" target="_blank">{{ government_entity_name }}</a>
            {{ page.header_slim_menu }}
          {% else %}
            <a class="d-lg-block navbar-brand" href="{{ government_entity_url }}" target="_blank">{{ government_entity_name }}</a>
          {% endif %}
          <div class="it-header-slim-right-zone">
            {% if page.header_slim_language %}
              {{ page.header_slim_language }}
            {% endif %}

            {% if logged_in %}
              {% if page.header_slim_action %}
                {{ page.header_slim_action }}
              {% endif %}
            {% else %}
              {% embed '@bi-bcl/button/button.html.twig' with {
                label: 'Login to your personal area'|trans,
                variant: 'primary',
                tag: 'a',
                url: '/user/login',
                utility_classes: ['btn-icon','btn-full'],
                label_classes: ['d-none', 'd-lg-block']
              } %}
                {% block before %}
                  <span class="rounded-icon">
                    {% include '@bi-bcl/icon/icon.html.twig' with {
                      name: 'it-user',
                      color: 'primary',
                    } %}
                  </span>&nbsp;
                {% endblock %}
              {% endembed %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
