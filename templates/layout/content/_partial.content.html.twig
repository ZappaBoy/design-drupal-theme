<main role="main">

  {% if page.breadcrumb %}
    <section class="it-breadcrumb__wrapper px-4 my-4 {{ content_container_type ?: 'container' }}">
      <div class="row">
        <div class="col px-lg-4">
          {{ page.breadcrumb }}
        </div>
      </div>
    </section>
  {% endif %}

  <a id="it-skip-to-main-content" tabindex="-1"></a>{# link is in html.html.twig #}

  {% if page.title %}
    <div class="it-page-title__wrapper {{ content_container_type ?: 'container' }}">
      <div class="row">
        <div class="col">
          {{ page.title }}
        </div>
      </div>
    </div>
  {% endif %}

  {% if page.local_tasks %}
    <div class="it-local-tasks_wrapper mb-5 {{ content_container_type ?: 'container' }}">
      {{ page.local_tasks }}
    </div>
  {% endif %}

  {% if page.help %}
    <div class="it-help__wrapper {{ content_container_type ?: 'container' }}">
      {{ page.help }}
    </div>
  {% endif %}

  {% if page.notification %}
    <div class="it-notification__wrapper {{ content_container_type ?: 'container' }}">
      {{ page.notification }}
    </div>
  {% endif %}

  {% set sidebar_width = page.sidebar_first and page.sidebar_second ? 'col-lg-3' : 'col-lg-4' %}

  <div class="{{ content_container_type ?: 'container' }}">
    <div class="row">
      {# Sidebar First #}
      {% if page.sidebar_first %}
        {% block sidebar_first %}
          <aside class="{{ sidebar_width }} it-sidebar-first__wrapper" role="complementary">
            {{ page.sidebar_first }}
          </aside>
        {% endblock %}
      {% endif %}

      <div class="col">
        <div class="it-content__wrapper">
          {{ page.content }}
        </div>
      </div> {# End col #}

      {# Sidebar Second #}
      {% if page.sidebar_second %}
        {% block sidebar_second %}
          <aside class="{{ sidebar_width }} it-sidebar-second__wrapper" role="complementary">
            {{ page.sidebar_second }}
          </aside>
        {% endblock %}
      {% endif %}
    </div> {# End row #}
  </div> {# End container #}
</main>
