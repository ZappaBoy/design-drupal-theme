{% set figure_classes = [
  'overlay-wrapper',
  variant == 'hover' ? 'overlay-hover'
] %}
{% set caption_classes = [
  'overlay-panel',
  variant == 'fullheight' ? 'overlay-panel-fullheight',
  variant == 'black' ? 'overlay-black',
  variant == 'icon' ? 'overlay-icon'
] %}
<figure {{ attributes.addClass(figure_classes) }}>
  {{ overlay_img }}
  <figcaption {{ attributes.addClass(caption_classes) }}><span>{{ overlay_caption }}</span>
    {% if overlay_icon and variant == 'icon' %}
      <span class="sr-only">{{ overlay_icon_sr_only }}</span>
      {% include '@bootstrap_italia_components/icon/icon.twig' with {
        name: overlay_icon
      }
      %}
    {% endif %}
  </figcaption>
</figure>


{# Render output
{% include '@bootstrap_italia_components/overlay/overlay.twig' with {
  overlay_caption: overlay_caption,
  overlay_img: overlay_img['uri'],
  overlay_img_alt: overlay_img_alt,
  overlay_fulllheight: (variant == 'fullheight') ? true : false,
  overlay_black: (variant == 'black') ? true : false,
  overlay_hover: (variant == 'hover') ? true : false,
  overlay_icon: (variant == 'icon') ? overlay_icon : false,
  overlay_icon_sr_only: (variant == 'icon') ? overlay_icon_sr_only : false
} %}
#}
