{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set disabled = attributes.disabled ? ' disabled' : '' %}
{% set attributes = attributes.disabled ? attributes.addClass('disabled') : attributes %}
{% set attributes = attributes.removeClass('form-number') %}
{#  { kint(attributes) } #}

{#
