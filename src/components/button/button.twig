{#
/**
 * @file
 * Template for a button pattern
 * Docs: https://italia.github.io/bootstrap-italia/docs/componenti/bottoni/
 * Last review: 1.3
 *
 * Available config:
 * - type: primary | secondary | success | danger | warning | info | light | dark
 * - outline: true | false
 * - tag: button, a, input
 * - value: string
 * - attributes: Attributes array
 * - icon: it-name
 */
#}
{% set classes = [
  'btn',
  type ? 'btn-' ~ type
] %}

{% if tag == 'input' %}
  <input{{ attributes.addClass(classes) }} />
{% else %}
  <{{ tag }}>{{ value }}</{{ tag }}>
{% endif %}
